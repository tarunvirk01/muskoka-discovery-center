<% include ../partials/header.ejs %>


<main class="container">


<h1> Add Staff Member</h1>
<form method="post">
    <div class="form-group">
        <label for="staffname" class="col-sm-2 control-label">First Name: </label>
        <input name="staffname" id="staffname" required  />
    </div>
    <div class="form-group">
        <label for="stafflastname" class="col-sm-2 control-label">Last Name: </label>
        <input name="stafflastname" id="stafflastname" required  />
    </div>
    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Phone </label>
        <input name="phone" id="phone" type:"number"required/>
    </div>
    <div class="form-group">
            <label for="role" class="col-sm-2 control-label">Role:</label>
            <select name="role" id="role">
                <option>Admin</option>
                <option>Editor</option>

            </select>
        </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>
</main>
