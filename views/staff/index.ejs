<% include ../partials/header.ejs %>

<main>
    <h1 class="coloredHeader">Staff Members</h1>

    <a href="./staff/add" class="btn buttonPrime buttonPrimeHover">Add new Staff</a>
    <a href="https://app.box.com/representation/file_version_170876533139/image_2048_jpg/1.jpg?shared_name=zqhgpraglqjv14n36pqzj4gdh4nl9wl2" class="btn buttonPrime buttonPrimeHover">Reports</a>

<table class="table table-striped table-bordered table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Manage</th>
        </tr>

        <% for (var i=0; i < staff.length; i++) { %>

            <tr class="tableRow">
                <td class="success"><%= staff[i].staffname %></td>
                <td><%= staff[i].stafflastname %></td>
                <td><%= staff[i].phone %></td>
                <td><%= staff[i].role %></td>
                <td>
                    <a href="/staff/<%= staff[i]._id %>" class="buttonPrime buttonPrimeHover btn">Edit</a>
                    <a href="/staff/delete/<%= staff[i]._id %>" class="buttonDanger buttonDangerHover btn">Delete</a>

                </td>
                <% }%>
            </tr>
    </table>



</main>
<% include ../partials/footer.ejs %>
